<!DOCTYPE html PUBLIC"-//W3C//DTD XHTML 1.0 Transitional//EN""http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"> <html>

<head>
    <title></title>
    <meta content="exported via StampReady" name="sr_export">
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <meta http-equiv="x-ua-compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans&display=swap" rel="stylesheet">
    <style type="text/css">
        body {
            margin: 0;
            padding: 0;
            background-color: #f2f4f7;
            -webkit-text-size-adjust: none;
            -ms-text-size-adjust: none;
        }

        table {
            border-spacing: 0;
            table-layout: fixed;
            margin: 0 auto;
        }

        table.content {
            background-color: #FFFFFF;
            border-radius: 8px;
            border: 1px solid #dcdfe5;
        }

        table.content-box {
            background-color: #f2f4f7;
            border-radius: 8px;
        }

        .content-box-left,
        .content-box-right,
        .content-box-single {
            padding: 16px;
            vertical-align: top;
        }

        table td {
            border-collapse: collapse;
        }

        table.header-row {
            border-radius: 8px 8px 0 0;
        }

        table.header-row>tbody>tr>td:first-child {
            padding-left: 24px;
        }

        table.header-row>tbody>tr>td:last-child {
            padding-right: 24px;
        }

        table.button {
            border-radius: 8px;
            padding: 2px;
            background-color: #B4775A;
        }

        .text-button {
            height: 40px;
            width: 220px;
            text-align: center;
            font-family: Arial, sans-serif;
            color: #FFFFFF;
            padding: 4px;
        }

        .text-button a {
            color: #FFFFFF;
            padding: 4px;
            font-size: 18px;
            text-decoration: none;
        }

        .text {
            font-family: Arial, sans-serif;
            text-align: center;
            color: #9E9E9E;
            font-size: 14px;
        }

        .footer-text {
            font-family: 'Noto Sans', sans-serif;

            text-align: center;
            color: #9E9E9E;
            font-size: 12px;
        }

        .nav {
            text-align: right;
            padding-left: 16px;
        }

        .nav a {
            font-family: Arial, sans-serif;
            color: #9E9E9E;
            font-size: 14px;
            text-decoration: none;
        }

        .hero {
            color: #373737;
            font-family: 'Noto Sans', sans-serif;

            font-size: 32px;
            text-align: center;
            font-weight: 600;
        }

        .hero-child {
            text-align: center;
            color: #6E6E6E;
            font-size: 14px;
            font-family: 'Noto Sans', sans-serif;

            line-height: 22px;
        }

        .link-login {
            color: #FF6500;
            font-family: 'Noto Sans', sans-serif;

            font-size: 14px;
            text-decoration: none;
        }

        .text-label {
            font-family: Arial, sans-serif;
            font-size: 14px;
            color: #868C9D;
            line-height: 22px;
        }

        .text-value {
            color: #576381;
            font-size: 14px;
            font-family: Arial, sans-serif;
            line-height: 22px;
        }

        .text-title {
            font-family: Arial, sans-serif;
            font-size: 14px;
            color: #525F7F;
            line-height: 22px;
        }

        .socialmediaicons {
            height: 22px;
            padding: 4px;

        }

        .footer-text {
            font-family: 'Noto Sans', sans-serif;

            text-align: center;
            color: #9E9E9E;
            font-size: 12px;
        }

        .invoice-headings {
            color: #494949;
            font-size: 12px;
            font-family: 'Noto Sans', sans-serif;

            line-height: 22px;
        }

        .invoice-details {
            color: #494949;
            font-size: 12px;
            font-family: 'Noto Sans', sans-serif;

            line-height: 22px;
        }

        .payment-details {
            color: #6E6E6E;
            font-size: 14px;
            font-family: 'Noto Sans', sans-serif;

            line-height: 22px;
        }

        .invoice-details-total {
            color: #373637;
            font-size: 14px;
            font-family: 'Noto Sans', sans-serif;

            font-weight: 800;
        }

        .payment-heading-table {
            background-color: #FF6500;
            height: 32px;
            color: white;
            font-family: 'Noto Sans', sans-serif;

            font-size: 14px;
            padding: 8px;
        }

        .ad-description {
            font-family: 'Noto Sans', sans-serif;

            font-size: 12px;
            color: #6E6E6E;
        }

        table.payment-data-table td {
            border-bottom: 2px solid #E6EBF1;
        }

        table.payment-bill-table td {
            border-bottom: 2px solid #E6EBF1;
            padding: 0 24px;
        }

        table.payment-total-table td {
            padding: 0 24px;
        }



        @media only screen and (max-width: 767px) {
            .mobileOff {
                width: 0px !important;
                display: none !important;
            }

            .content-box-right {
                width: 0px !important;
                display: none !important;
            }

            *[class*="mobileOn"] {
                display: block !important;
                max-height: none !important;
            }

            br {
                display: static;
            }

            table.table-inner {
                width: 90% !important;
            }

            .hero {
                font-size: 16px !important;
                text-align: center;
            }

            .hero-child {
                font-size: 10px !important;
                line-height: 18px !important;
            }

            table.table-inner-sub {
                width: 96% !important;
            }

            .logo-wrapper {
                text-align: center !important;
            }

            table.header-row {
                width: 100% !important;
            }

            .textbutton {
                width: 170px;
            }

            table.content-box td strong,
            table.content-box td span {
                font-size: 14px !important;
            }

            .hero {
                padding-top: 10px;
            }

            .booking-img-wrp {
                text-align: center !important;
            }


            table.content-box-left {
                width: 100%;
            }

            table.content-box-right {
                width: 100%;
            }


            .hero-img {
                width: 100% !important;
            }

            .footer-text {
                font-family: 'Noto Sans', sans-serif;

                text-align: center;
                color: #9E9E9E;
                font-size: 10px;
            }

            .ad-description {
                font-family: 'Noto Sans', sans-serif;

                font-size: 8px;
                color: #6E6E6E;
            }

            .payment-heading-table {
                background-color: #FF6500;
                height: 32px;
                color: white;
                font-family: 'Noto Sans', sans-serif;

                font-size: 8px;
                padding: 8px;
            }

        }
    </style>
</head>

<body>
